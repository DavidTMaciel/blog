<div class="card">
    <div class="card-body">
        <form action="" method="">
                <label for="titulo">Titulo:</label>
                <input type="text" name="titulo" class="form-control" placeholder="Titulo">
                <label for="slug">Slug:</label>
                <input type="text" name="slug" class="form-control">
                <label for="descricao">Descricao</label>
                <input type="text" name="descricao" class="form-control" placeholder="Descricao">
                <label for="conteudo">Conteudo</label>
                <textarea name="conteudo" class="form-control"></textarea>
                <label for="categoria">Categoria</label>
                <select name="categoria" class="form-control">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                         <option value="">Nenhuma categoria registrada</option>
                    {{/each}}
                </select>
                <button class="btn btn-success mt-2" type="submit">Criar postagem</button>
        </form>
    </div>
</div>